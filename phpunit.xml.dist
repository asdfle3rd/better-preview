<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="Better Preview Revisions Test Suite">
			<directory suffix=".php">./tests/</directory>
			<exclude>./tests/wp-tests-config-env.php</exclude>
		</testsuite>
	</testsuites>
</phpunit>
